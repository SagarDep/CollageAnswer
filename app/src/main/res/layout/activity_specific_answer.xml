<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--具体的回答页面-->

    <club.cqut.collageanswer.customview.HeadBackView_
        android:id="@+id/backview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></club.cqut.collageanswer.customview.HeadBackView_>



        <TextView
            android:id="@+id/question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="问题标题"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="#C5C1AA"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        >
        <club.cqut.collageanswer.RoungImage.CircleImageView
            android:id="@+id/head_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/bootstrap_1"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            >
            <TextView
                android:id="@+id/role_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信息"
                android:textStyle="bold"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/user_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="15"
                android:text="迪斯哦评价飞大厦fen疯子放荡女法师购买哦哦牛皮发动佩服你"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            >

        <LinearLayout
            android:background="#000000"
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            >

        </LinearLayout>

        <ImageView
            android:id="@+id/prise"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/raiseprise"
            android:layout_marginRight="3dp"
            />
        <TextView
            android:id="@+id/prise_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ABABAB"
        ></LinearLayout>


    <TextView
        android:id="@+id/answer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="#000000"
        android:text="高i爱的结果i哦等级高ID金佛ia"
        />
</LinearLayout>
